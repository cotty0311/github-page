{
  "$id": "https://example.com/item.schema.json",
  "title": "Item",
  "type": "object",
  "properties": {
    "type": { "type": "string" },
    "keyid": { "type": "string" },
    "show": { "type": "boolean" },
    "date": {
      "type": "array",
      "items": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
      "minItems": 2,
      "maxItems": 2
    },
    "title": { "type": "string" },
    "institution": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "name_short": { "type": "string" },
        "url": { "type": "string" },
        "location": { "type": "string" },
        "short_description": { "type": "string" }
      },
      "required": [
        "name",
        "name_short",
        "url",
        "location",
        "short_description"
      ],
      "additionalProperties": false
    },
    "description": { "type": "string" },
    "tags": {
      "type": "array",
      "items": { "type": "string" }
    },
    "urls": {
      "type": "object",
      "additionalProperties": {
        "type": "string",
        "format": "uri"
      }
    },
    "images":{
      "type": "object",
      "additionalProperties": {
        "type": "string",
        "pattern": "^[^\\s]+\\.(png|jpg|jpeg|gif|svg)$"
      }
    }
  },
  "required": [
    "type",
    "keyid",
    "show",
    "date",
    "title",
    "description",
    "tags"
  ],
  "additionalProperties": false
}
